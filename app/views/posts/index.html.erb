<h1>All Posts</h1>
<%= link_to 'New Post', new_post_path %>
<ul>
  <% @posts.each do |post| %>
    <li>
      <%= link_to post.content, post_path(post) %>
      <%= link_to 'Edit', edit_post_path(post) %>
      <%= link_to 'Destroy', post_path(post), data: { "turbo-method": :delete, confirm: 'Are you sure?' } %>
    </li>
  <% end %>
</ul>

